{
  "openapi": "3.0.1",
  "info": {
    "title": "Appointment Command API",
    "description": "An API for publishing commands for manipulating appointment data.",
    "version": "v1"
  },
  "paths": {
    "/v1/Appointment": {
      "post": {
        "tags": [
          "Appointment"
        ],
        "summary": "Create an appointment",
        "description": "Sample request:\r\n            \r\n    POST /v1/appointment\r\n    {\r\n        \"title\": \"Sample Meeting #1\",\r\n        \"startTime\": \"2019-11-07T01:28:10.093Z\",\r\n        \"durationMinutes\": 30\r\n    }",
        "requestBody": {
          "description": "The request containing info needed to create appointment",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAppointmentRequest"
              }
            }
          }
        },
        "responses": {
          "409": {
            "description": "Returns an exception if there is a confict or error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "201": {
            "description": "Returns a success message",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateAppointmentCommand"
                }
              }
            }
          }
        }
      }
    },
    "/Health": {
      "get": {
        "tags": [
          "Health"
        ],
        "summary": "A simple endpoint for testing the status of the API",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateAppointmentRequest": {
        "required": [
          "durationMinutes",
          "startTime",
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the appointment",
            "nullable": true
          },
          "startTime": {
            "type": "string",
            "description": "When the appointment begins",
            "format": "date-time"
          },
          "durationMinutes": {
            "type": "integer",
            "description": "How long the appointment will be",
            "format": "int32",
            "default": 30
          }
        },
        "additionalProperties": false,
        "description": "Represents a request to create a new appointment"
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "stackTrace": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "CreateAppointmentCommand": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "readOnly": true
          },
          "title": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "startTime": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "duration": {
            "type": "string",
            "format": "date-span",
            "readOnly": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}